<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<%= render 'books/book', user:current_user, book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td><%= link_to user_path(book.user_id) do %>
									<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg" %>
									<% end %>
								</td>
								<td><%= link_to book.title, book_path(book.id) %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
